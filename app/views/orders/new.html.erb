 <div class="row">
   <div class="col-md-12">

    <h2> Shopping Info. </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Product Info.</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>

        <% @current_cart.cart_items.each do |item| %>
          <tr>
            <td>
              <%= link_to item.product.title, item.product %>
            </td>
            <td><%= item.quantity %></td>
            <td>
              <%= item.product.price %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Total <%= render_cart_total(@current_cart) %> NTD
      </span>
    </div>

    <hr>

    <h2> Order Info. </h2>

    <div class="order-form">
      
      <%= simple_form_for @order do |f| %>

        <%= f.simple_fields_for :info do |c| %>

          <legend>Buyer</legend>
          <div class="form-group col-lg-6">
            <%= c.input :billing_name  %>
          </div>
          <div class="form-group col-lg-6">
            <%= c.input :billing_address  %>
          </div>

          <legend>Receiver</legend>
          <div class="form-group col-lg-6">
           <%= c.input :shipping_name  %>
          </div>
          <div class="form-group col-lg-6">
            <%= c.input :shipping_address  %>
          </div>
        <% end %>

        <div class="checkout">
          <%= f.submit "Check Out", class: "btn btn-lg btn-danger pull-right",
                       data: { disable_with: "Submitting..." } %>
        </div>
      <% end %>

    </div>
  </div>
</div>

