<div class="row">
  <div class="col-md-12">

    <h2> Order Info. </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Product Info</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>

        <% @order_items.each do |order_item| %>
          <tr>
            <td>
              <%= order_item.name %>
            </td>
            <td><%= order_item.quantity %></td>
            <td>
              <%= order_item.price %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Total <%= number_to_currency(@order.total)%> NTD
      </span>
    </div>

     <hr>

     <h2> Shipping Info </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            Buyer
          </td>
        </tr>
        <tr>
          <td>
            <%= @info.billing_name %> - <%= @info.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            Receiver
          </td>
        </tr>
        <tr>
          <td>
            <%= @info.shipping_name %> - <%= @info.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
